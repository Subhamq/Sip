    <script>
        // --- NAVIGATION LOGIC ---
        function switchTab(tabName, element) {
            // Remove active class from all tabs
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));

            // Add active class to selected
            document.getElementById('view-' + tabName).classList.add('active');
            element.classList.add('active');

            // Update Header Title
            const titles = { 'sip': 'SIP Calculator', 'stock': 'Stock Calculator', 'sci': 'Scientific Calc' };
            document.getElementById('header-title').innerText = titles[tabName];
        }

        // --- DRAWER LOGIC ---
        function toggleDrawer() {
            const drawer = document.getElementById('drawer');
            const overlay = document.querySelector('.overlay');
            
            if (drawer.classList.contains('open')) {
                drawer.classList.remove('open');
                overlay.classList.remove('active');
            } else {
                drawer.classList.add('open');
                overlay.classList.add('active');
            }
        }

        // --- THEME LOGIC ---
        function toggleTheme() {
            const current = document.documentElement.getAttribute('data-theme');
            const target = current === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', target);
        }

        // --- CALCULATOR LOGIC ---
        
        // 1. SIP
        function calculateSIP() {
            const P = parseFloat(document.getElementById('sip-amount').value);
            const r = parseFloat(document.getElementById('sip-rate').value);
            const n = parseFloat(document.getElementById('sip-years').value);

            if (!P || !r || !n) return;

            const i = r / 12 / 100;
            const months = n * 12;
            const fv = P * ((Math.pow(1 + i, months) - 1) / i) * (1 + i);

            const resultBox = document.getElementById('sip-result');
            resultBox.style.display = 'block';
            document.getElementById('sip-val').innerText = '₹ ' + fv.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        }

        // 2. Stock
        function calculateStock() {
            const buy = parseFloat(document.getElementById('st-buy').value);
            const sell = parseFloat(document.getElementById('st-sell').value);
            const qty = parseFloat(document.getElementById('st-qty').value);

            if (!buy || !sell || !qty) return;

            const totalBuy = buy * qty;
            const totalSell = sell * qty;
            const pnl = totalSell - totalBuy;
            const percent = ((pnl / totalBuy) * 100).toFixed(2);

            const resultBox = document.getElementById('stock-result');
            const valEl = document.getElementById('st-val');
            const labelEl = document.getElementById('st-label');

            resultBox.style.display = 'block';
            
            if (pnl >= 0) {
                valEl.style.color = '#4CAF50';
                resultBox.style.background = 'rgba(76, 175, 80, 0.1)';
                labelEl.innerText = 'Profit';
                valEl.innerText = `+${pnl.toFixed(2)} (${percent}%)`;
            } else {
                valEl.style.color = '#F44336';
                resultBox.style.background = 'rgba(244, 67, 54, 0.1)';
                labelEl.innerText = 'Loss';
                valEl.innerText = `${pnl.toFixed(2)} (${percent}%)`;
            }
        }

        // 3. Scientific
        let sciExpression = '';
        function sciInput(val) {
            sciExpression += val;
            updateSciDisplay();
        }
        function sciClear() {
            sciExpression = '';
            updateSciDisplay();
        }
        function sciFunc(fn) {
            if (sciExpression === '') return;
            try {
                // Evaluate current number then apply function
                let val = eval(sciExpression); 
                if (fn === 'sin') val = Math.sin(val);
                if (fn === 'cos') val = Math.cos(val);
                sciExpression = val.toString();
                updateSciDisplay();
            } catch (e) {
                sciExpression = 'Error';
                updateSciDisplay();
            }
        }
        function sciCalc() {
            try {
                sciExpression = eval(sciExpression).toString();
            } catch (e) {
                sciExpression = 'Error';
            }
            updateSciDisplay();
        }
        function updateSciDisplay() {
            const display = document.getElementById('sci-display');
            display.innerText = sciExpression === '' ? '0' : sciExpression;
        }
    </script>
</body>
